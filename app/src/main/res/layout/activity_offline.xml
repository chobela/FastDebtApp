<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bills"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/White">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:id="@+id/uid"
                android:visibility="invisible"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relLayout1"
                >


                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="PLease enter all fields"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txt"
                    android:textSize="17dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt"
                    android:background="@color/White"
                    android:id="@+id/txt2"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/name"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edt_corner"
                        android:inputType="text"
                        android:hint="Debtor Name"
                        android:textColor="@color/Black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt2"
                    android:background="@color/White"
                    android:id="@+id/txt3"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/town"
                        android:layout_centerVertical="true"
                        android:hint="Town"
                        android:background="@drawable/edt_corner"
                        android:textColor="@color/Black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt3"
                    android:background="@color/White"
                    android:id="@+id/txt4"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/address"
                        android:layout_centerVertical="true"
                        android:hint="Full Address"
                        android:background="@drawable/edt_corner"
                        android:textColor="@color/Black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt4"
                    android:background="@color/White"
                    android:id="@+id/txt5"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/amount"
                        android:layout_centerVertical="true"
                        android:hint="Amount"
                        android:inputType="number"
                        android:background="@drawable/edt_corner"
                        android:textColor="@color/Black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt5"
                    android:background="@color/White"
                    android:id="@+id/txt6"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/docid"
                        android:layout_centerVertical="true"
                        android:hint="Document ID"
                        android:background="@drawable/edt_corner"
                        android:textColor="@color/Black"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt6"
                    android:id="@+id/relLayout9"
                    android:layout_marginTop="10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/White"
                        android:id="@+id/relLayout3"
                        android:layout_marginTop="10dp"
                        android:padding="10dp">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/comment"
                            android:layout_centerVertical="true"
                            android:maxLines="10"
                            android:background="@drawable/edt_corner2"
                            android:hint="Comments"
                            android:textColor="@color/White"
                            android:textColorHint="@color/White"
                            android:gravity="start"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relLayout3"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/btn_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="35dp"
                            android:text="submit"
                            android:textColor="@color/White"
                            android:background="@color/colorPrimary"
                            android:layout_centerHorizontal="true"
                            android:onClick="onClick"/>
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:visibility="invisible"/>

</RelativeLayout>